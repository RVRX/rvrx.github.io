---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag }}/
---

<link href="/css/post.css" rel="stylesheet">
<div id="main">
	 <div class="post">
        <h1>Tagged "{{ tag }}"</h1>
	  	<div id="post-body">
            {% set taglist = collections[ tag ] %}
            {% if taglist and taglist.length > 0 %}
            <ol>
              {% for post in taglist | reverse %}
                <li>
                  <a href="{{ post.url }}">{{ post.data.title }}</a>
                  {% if post.data.date %}
                    <span class="post-meta"> - {{ post.data.date | date('%B %d, %Y') }}</span>
                  {% endif %}
                </li>
              {% endfor %}
            </ol>
            {% else %}
            <p>No posts found for this tag.</p>
            {% endif %}
            <p><a href="/blog/tags/">‚Üê All Tags</a></p>
		</div>
	 </div>
</div>
