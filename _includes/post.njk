---
layout: base.njk
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="{% if seo_keywords %}{{ seo_keywords }}, {% endif %}Cole Manning, Blog, RVRX">{% if desc %}
	<meta name="description" content="{{ desc }}">
	{% else %}
    <meta name="description" content="Website and Dev Blog of Cole Manning">
    {% endif %}

    {% if title %}
	<title>{{ title }} | RVRX Blog</title>
	{% else %}
    <title>RVRX Blog</title>
	{% endif %}

    <link href="/sidebar.css" rel="stylesheet">
    <link href="/post.css" rel="stylesheet">
    <link href="/prismjs/prism.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>code[class*="language-"]:not(pre code[class*="language-"]) {line-height: normal}</style> <!-- Override weird line-height from prisim-js -->
</head>
{% include "gtag.njk" %}
<body>
{% include "sidebar.njk" %}
<style type="text/css">
	#post-body a, #post-metadata a {
		color: {{ color | default: "#7A9CA2" }};
	}

	#sidebar a.current-page {
		color: {{ color | default: "#7A9CA2" }};
	}

	#post-body a:hover, #post-metadata a:hover {
		color: {{ color | default: "#7A9CA2" }}AA !important;
	}

	#sidebar a.current-page:hover {
		color: {{ color | default: "#7A9CA2" }}AA !important;
	}
</style>
<div id="main">
    <div class="post">
        <h1 style="background-color: {{ color | default: "#7A9CA2" }}; transition-duration: 660ms;" data-aos="fade-right">{{ title }}</h1>
        <div id="post-metadata">
          {% if subtitle %}
          	<h2 class="subtitle">{{ subtitle }}</h2>
          {% endif %}
          {% if datePosted or tags %}
	        <ul>
	          {% if datePosted %}
	            <li><time datetime="{{ datePosted | date: "%Y-%m-%d" }}">Posted: {{ datePosted | toLocaleDate }}</time></li>
	          {% endif %}
	          {% if dateEdited and dateEdited != datePosted %}
	          	<li><em><time datetime="{{ dateEdited | date: "%Y-%m-%d" }}">Edited: {{ dateEdited | toLocaleDate }}</time></em></li>
	          {% endif %}
	          {% if tags and tags.length %}
	          	<li>
	            {% for tag in tags %}
	            	<a href="/blog/tags/{{ tag }}/" class="post-tag">{{ tag }}</a>{% unless forloop.last %},{% endunless %}
	            {% endfor %}
	            </li>
	          {% endif %}
	        </ul>
	  	 {% endif %}
	    </div>
        <div id="post-body">
            {{ content | safe }}
        </div>
    </div>
</div>
<script src="/prismjs/prism.js"></script>
</body>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init();
</script>
</html>

